
def parallelogram_word(input):
### START YOUR CODE HERE ###
    for i in range(1, len(input)+2):    ## range = 2*len()-(len()-2) =len()+2 
        if i <= len(input):
           print (input[:i]).rjust(len(input), ' ')
        else:
            for i in range(1, len(input)+1):
               print input[:-i]
               
#### END YOUR CODE HERE ####
	
parallelogram_word('TEST')
